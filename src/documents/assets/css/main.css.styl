@import 'nib'

@font-face
    font-family: main-body
    src: url('/assets/fonts/source-sans-pro.ttf')

@font-face
    font-family: main-code
    src: url('/assets/fonts/SourceCodePro-Regular.ttf')


// VARIABLES
//
// ========================================================
//rainbow
blue  = #33A6FF
red   = #FF3713
green = #16D943

// gray and dark gray
lightcolor           = grey-01
mediumcolor          = grey-04
mediumcolor-contrast = grey-05
darkcolor-contrast   = grey-07
darkcolor            = grey-08

// special cozy colors
homeheadercolor = #363a46
bluegreen       = #34A6BB
lightblue       = #CBE4FB
lightred        = #F4F4F4
grey            = #666
lightgrey       = lightcolor
darkblue        = blue - 20%

// 50 (well, in fact, mostly 8) shades of grey
grey-01 = #ECEFF3
grey-02 = #DFE4E9
grey-03 = #C8D5DF
grey-04 = #ACB8C5
grey-05 = #92A0B2
grey-06 = #748192
grey-07 = #4F5B69
grey-08 = #32363F


// OLD ONES
black       = grey-08
midgrey     = grey-05




body
    font-family "Source Sans Pro", helvetica, arial, sans-serif
    font-size   16px
    color       black

pre
code
    font-family   main-code

p
    margin .25em 0

.wrapper
    width        100%
    max-width    50em
    margin-left  auto
    margin-right auto
    margin-top   5em


// Header styles
//
// ========================================================

// from home.css.styl
.navbar
    z-index         100
    position        fixed
    top             0
    left            0
    box-sizing      border-box
    display         flex
    justify-content space-between
    align-items     center
    width           100%
    padding         1em 2em
    background      white
    border-bottom   1px solid grey-02

    @media (max-width: 425px)
        padding 1em

    img
        height 2em

        @media (max-width: 425px)
            height 1.5em

    ul
        list-style-type none
        margin          0
        padding         0

    li
        display inline

        a
            padding         .5em
            color           grey-06
            text-decoration none

            &:hover
                border-bottom 2px solid blue

    .selected
        color blue

    .nav-toggle
        display none
        float right
        border none
        background none
        color blue
        font-size 30px


    @media (max-width:580px)
        .homepage &
            transition transform 500ms
            transform translateY(0)

            &[aria-expanded=true]
                transform translateY(290px)

            nav
                position absolute
                bottom 100%
                left 0
                width 100%
                padding 10px

            .right
                float none

            li
                display block

            .lang-switcher
                margin-top 10px
                border-top 1px solid #eee

                li
                    display inline

            .nav-toggle
                display block

.navbar
    li
        position relative

    .subtitle
        padding-top 5px
        display inline-block

        li:hover > a
            color blue
            text-decoration none

        .selected
            color black
            border-bottom 2px solid blue

        @media (max-width: 1023px)
            display none

.dropdown-menu
    display none
    .subtitle > li:hover &
        display block

    position absolute
    top 100%
    left 0
    box-sizing border-box
    width 250px
    padding 10px !important
    background-color white
    border 1px solid #ccc
    border-top none
    border-radius 0 0 4px 4px

    li
        display block
        margin 0.75em

    a
        font-size 15px !important


// Menu styles
aside
    border-right 1px solid lightblue
    position fixed
    width 250px
    margin-top -20px

    @media (max-width: 960px)
        display none

    p.title
        display block
        margin 0 0 5px 20px
        font-size 20px
        &:not(.toc)
            display none


#navigation
    margin 0 0 0 20px


    ul
        list-style-type none
        padding 0
        font-family main-body


        li
            border-bottom 1px solid lightblue
            line-height 30px
            cursor pointer

            a, a:active
                color blue
            &:hover a
                color #fff

            .label
                width 100%
                padding 10px 0
                display inline-block
                user-select none
                text-decoration none

                &:hover
                    background blue
                    color #fff

            &:active
                box-shadow inset 0 0 15px blue

            &.active
                background blue
                .label
                    color #fff

            &:last-of-type
                border-bottom 0

            &:hover
                background blue
                padding-bottom 0

        &.first-level
            li
                .label
                    font-family main-body
                    padding-left 10px

                &:hover > ul
                &.active > ul
                    border-top 1px solid blue

        &.second-level
            display none

        &.first-level li.active
            ul.second-level
                display block

        &.first-level li.active
        &.first-level li:hover

                li
                    color #fff
                    border-bottom 0
                    text-align left
                    line-height 20px
                    a
                        padding-left 10px !important

                    .label
                        padding 7px 0

                    &:hover
                        background blue
                    &.active
                        background blue
                        a
                            color darkgrey

            &:hover
                color blue


// Content styles
#main
    padding 2em

    @media (max-width: 425px)
        padding 1em

    img
        margin     .5em
        box-shadow 0 2px 8px rgba(grey-06, .33)

    img.warn
        float      left
        margin     0 0.5em 0 0
        box-shadow 0 0 0

    p
        code
            padding 5px
            margin-bottom 15px

    ul
        margin .75em 0

        li
            padding .25em 0

    ul.summary
        list-style-type none
        margin 0
        padding 0
        font-family main-body

    #patch-note

        label
            font-family main-body

        input[type="checkbox"]
            margin-right 25px
            &:focus
                outline none

        label[for="toggle-feature"]
            color blue + 30%

        label[for="toggle-bug"]
            color orange + 30%

        label[for="toggle-security"]
            color red + 30%

        label[for="toggle-internal"]
            color green + 30%

        // handles "show/hide" actions when the checkbox is unchecked
        #toggle-feature:checked ~ ul li.feature
        #toggle-bug:checked ~ ul li.bug
        #toggle-security:checked ~ ul li.security
        #toggle-internal:checked ~ ul li.internal
            display block

        ul
            list-style-type none
            padding-left 0

        li
            display none
            // color bullet
            &:before
                border-radius 50%
                display inline-block
                content " "
                width 10px
                height 10px
                margin-right 5px

        li.feature:before
            background blue + 30%
        li.bug:before
            background orange + 30%
        li.security:before
            background red + 30%
        li.internal:before
            background green + 30%

    h3
        margin-top    1em
        margin-bottom 1em
        font-weight   normal

    h2
        margin-bottom 1em
        margin-top    1.5em
        padding-top   1em
        border-top    2px solid grey-01
        font-weight   normal
        font-size     2em

    h2:first-letter
        text-transform uppercase

    h1
        margin-bottom 10px
        margin-top 0
        font-weight normal

    a
    a:visited
        color           blue
        text-decoration none

    a:hover
        color darkblue
        text-decoration underline

    pre.highlight

        margin-top    0
        margin-bottom 1em

        code
            padding          1em
            margin-top       10px
            margin-bottom    30px
            background-color black
            border-radius    5px
            line-height      1.5

    hr
        border        0
        height        0
        border-bottom 3px solid #eee
        margin        1em 0

    .install-logo
        display     flex
        flex-wrap   wrap
        align-items top

        img
            border-radius 50em

        a
            display         block
            width           9em
            margin-bottom   1em
            padding         0 1em
            font-size       1.25em
            color           blue
            text-align      center
            text-decoration none

            .label
                text-align center
                padding-top 7px

        a:hover
            color blue - 40%

    #patch-note.v2
        li
            display block
        li:before
            background blue + 30%
        li.contributors:before
            background green + 30%

// Footer styles
#footer
    display         flex
    justify-content space-around
    margin          1em auto
    border-top      2px solid grey-02

    @media (max-width:450px)
        flex-direction column
        padding        .5em 0

    a
        display         flex
        align-items     center
        padding         1em
        text-decoration none
        color           grey-06

        @media (max-width:450px)
            padding .5em 1em

        &:hover
            color blue

        img
            padding-right .5em

.install-inner-logo
    float right
    margin-left 1em
    margin-bottom 1em

    img
        border-radius 50em

// Deprecation warning
.deprecated
    font-size 1.5em
    border 1px solid orange
    border-radius .5em
    background-color #FD0
    padding 1em
    margin-bottom 4em

    b
      font-weight bold
