@import 'nib'

@font-face
    src: url('/assets/fonts/source-sans-pro.ttf')



// VARIABLES
//
// ========================================================
//rainbow
blue  = #3CA8FC
red   = #FF3713
green = #16D943

// gray and dark gray
lightcolor           = grey-01
mediumcolor          = grey-04
mediumcolor-contrast = grey-05
darkcolor-contrast   = grey-07
darkcolor            = grey-08

// special cozy colors
homeheadercolor = #363a46
bluegreen       = #34A6BB
lightblue       = #CBE4FB
lightred        = #F4F4F4
grey            = #666
lightgrey       = lightcolor
darkblue        = blue - 20%

// 50 (well, in fact, mostly 8) shades of grey
grey-01 = #ECEFF3
grey-02 = #DFE4E9
grey-03 = #C8D5DF
grey-04 = #ACB8C5
grey-05 = #92A0B2
grey-06 = #748192
grey-07 = #4F5B69
grey-08 = #32363F


// OLD ONES
black       = grey-08
midgrey     = grey-05



// BASE
//
// ========================================================

body
    font-family "Source Sans Pro", helvetica, arial, sans-serif
    font-size   16px
    color       black

h1
    font-size 2.5em
    margin    0
    padding   0

    @media (max-width: 425px)
        font-size 1.5em

h2
    margin      .25em 0
    font-weight normal
    color       grey-06
    font-size   1.5em
    line-height 1.3

    @media (max-width: 425px)
        font-size 1.25em

h3
    line-height 1
    font-size   1.25em
    margin      0 0 .5em
    font-weight normal

h4
.h4-like
    font-weight normal
    line-height 1.5em
    margin-top  1rem

a
a:hover
a:visited
    text-decoration none
    color           blue

a:focus
    outline: 0

section
    margin 4em 0

    @media (max-width: 425px)
        margin 2em 0

input
    border: 1px solid lightblue

input:hover
input:active
    border: 1px solid blue
    box-shadow: none

button
    border: 1px solid lightblue
    background: lightblue
    color: grey
    box-shadow: none
    text-shadow: none
    border-radius: 3px
    font-weight: normal
    cursor: pointer
    outline: none
    padding: 1px

button:hover
    background: blue
    color: white
    outline: none

button:active
    background: blue - 10%
    shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.0)
    color: white
    outline: none

.mt3
    margin-top: 0px

.mt3
    margin-top: 30px

.mt6
    margin-top: 60px

[class*="grid"] > *
    float: left

[class*="grid"] > * + *
    margin-left: 2%

.capitalize
    text-transform: uppercase

.grid5 > *
    width: 18.4%

.special
    background: blue
    padding: 10px
    border-radius: 5px
    color: white

    h4
        color: white

    a
    a:visited
    a:focus
        color: white

.grid3 > *
    width: 32%

.warning
    color: white
    font-weight: bold
    background-color: red
    border-radius: 5px
    padding: 20px

    a
    a:hover
    a:visited
        color: white

main
    padding 6em

    @media (max-width: 959px)
        padding 4em

    @media (max-width: 425px)
        padding 3em 1em

    a.button
        display         block
        padding         .25rem 0
        cursor          pointer
        border          0
        text-decoration none
        transition      all 0.2s ease-out

    .main-actions
        display         flex
        justify-content space-between
        max-width       60em
        margin-left     auto
        margin-right    auto

        @media (max-width: 960px)
            flex-direction column

        h3
            color blue

        a.button
            display         flex
            flex-direction  column
            align-items     center
            justify-content center
            width           100%
            height          100%
            padding         2em
            box-shadow      0 5px 20px rgba(grey-06,.12), 0 1px 3px rgba(grey-06,.19)
            border-radius   .5rem
            color           grey-06
            text-align      center
            line-height     1.2


            &:hover
                box-shadow       0 7px 28px rgba(grey-08,.15), 0 1px 3px rgba(grey-08,.22)

                h3
                    color darkblue


    img
        width         3em
        margin-bottom 1em

        svg
            .primary
                stroke       red
                stroke-width 1px

            .secondary
                stroke       green
                stroke-width 4px

    ul
        list-style none
        margin     0
        padding    .5em 0

        a:hover
            color           darkblue
            text-decoration underline

.code
    display: inline-block
    max-width: none

.wrapper
    margin-top 3.5em

.txt-white
    color: white

.txt-black
    color: black

    a
    a:hover
        color: black

.black-text
    color: black

.additional-infos
    display: none

.image
    margin-top: 20px
    margin-left: 50px

.next
    text-decoration: none
    font-weight: bold
    font-size: 18px
    margin-top: 40px

.simple
    padding-bottom: 40px

    h4
        text-align: center
        font-size: 60px

.highlight
    .line
        text: center
        padding: 20px

    p
        text-align: center
        font-size: 26px
        margin-top: 40px
        margin-bottom: 0px

    h4
        text-align: center
        font-size: 60px

    ul
        padding: 20px
        padding-top: 10px
        margin-left: 0
        padding-left: 0
        font-size: 40px

    li
        margin-left: 0
        margin-top: 0px
        list-style-type: none
        text-align: center
        font-size: 30px

.navbar
    z-index         100
    position        fixed
    top             0
    left            0
    box-sizing      border-box
    display         flex
    justify-content space-between
    align-items     center
    width           100%
    padding         1em 2em
    background      white

    @media (max-width: 425px)
        padding 1em

    img
        height 2em

        @media (max-width: 425px)
            height 1.5em

    ul
        list-style-type none
        margin          0
        padding         0

    li
        display inline

        a
            padding         .5em
            color           grey-06
            text-decoration none

            &:hover
                border-bottom 2px solid blue

        &:first-child
            margin-right 1em

            @media (max-width: 425px)
                display none

    .selected
        color blue


.menu
    padding 0
    margin 0
    position:fixed
    height: 60px
    background: white
    width: 100%

    p
    h1
        margin 0

    button
    .read-more
    .happy-pic
        display: none

.credits
    font-size 1em
    color midgrey



@keyframes scaleUp
    80%
        opacity: 0;
        transform: scale(2);

    100%
        opacity: 0;
        transform: scale(2);


#keep-in-touch
    @media (min-width: 640px)
        label
        input
        [type=submit]
            float left

        label
            width 55%

        [type=submit]
            width 44%
            margin-left 1%

    @media (min-width: 805px)
        label
            width 65%

        [type=submit]
            width 34%


#about
    background: white
    color: black

    a
    a:hover
        color: black

    .right
        margin-left: 20px
        margin-top: 0px


.team
    overflow auto
    padding 0
    font-size 1.43em
    list-style-type none
    text-align center

    li
        font-size: 0.01em
        display inline-block
        box-sizing border-box
        width 15%
        min-width 80px
        padding 5px


// Documentation
@media (max-width: 1060px)

    #header
        .biglogo
            float: none
            width: 100%
            margin-bottom: 30px

        .biglogo.left
            float: none

    header
    .social
        padding 6em

    header
        .main-text
            padding-left: 0

    #hack
    #leave
        .button
            font-size: 26px
    #why
        #install-button
            font-size: 26px


@media (max-width: 960px)

    .w50
        padding: 0
        width: 100%

    .w30
        width         100%
        margin-bottom 1em

    header
        text-align: center

        h1
            font-size: 30px
            text-align: center

        h4
            font-size: 24px

        .mod.left
            float none

        .main-text
            text-align: center

    .simple
        h4
            font-size: 40px

        p
            font-size: 24px

    .highlight

        h4
            font-size: 40px

        .line
            p
                font-size: 22px

        li
            margin-top: 20px
            font-size: 24px
            text-align: left

    h3
            font-size: 20px

    .code
        font-size: 15px

    #social
        padding: 0
        padding-bottom: 20px

        .w33
            width: 100%

        h1
            padding-left: 40px

    #goals
        padding-left: 40px
        padding-right: 20px

        p
            padding-left: 0

    #community-cozy
    #hack
        img
            width: 96px

    #header
        .image-links
            a.button
                height auto
                display block


@media (max-width: 600px)

    header
        padding: 80px 20px 10px 20px
        margin-top: 40px

        .title
            font-size: 40px
            width: 100%
            display: inline-block

        .h4-like
            font-size: 26px


    #social
        h1
            margin-top: 20px
            padding-left: 20px

    #goals
        padding-left: 20px
        padding-right: 20px


    .image-links
        font-size: 20px

    .image-links:nth-child(2)
        margin-top: 0

    .highlight
        padding: 10px

    .target
        padding: 20px

    .external-links
        height: auto

        a
            width: 100%
            margin-top: 10px
            display: inline-block

    #mc-embedded-subscribe-form
        input
        button
            width: 100%

    #community-cozy
    #leave
    #why
        -webkit-background-size 100%
        -moz-background-size 100%
        -o-background-size 100%
        background-size 100%
        background #FFF
        padding 0

        .line:first-child
            padding-top 40px

    #leave
        background #DCC


@media (max-width: 480px)

    #about
    .simple
    .highlight
        .line
            padding 5px

            p

    #hack
    #leave
        font-size 16px

        img
            margin-top 20px

        .pa2
            padding 20px 0
            font-weight normal
            font-size 20px

        .button
            font-size 12px

    #why
        .tagline
            font-size 16px
            font-weight normal

        .pa2
            font-weight normal

        #install-button
            font-size 12px

    .gallery img.picto
        margin-top 60px

    button
        font-size 16px

    .code
        font-size 13px

    .diagbox
    .diagbox:hover
        p
            display none
